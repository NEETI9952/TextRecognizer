<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/extracted_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:padding="8dp"
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/bill" />

<!--            <EditText-->
<!--                android:id="@+id/textViewGST"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />-->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="GSTIN"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewGST"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="2dp"-->
<!--                android:hint="Bill Details"-->
<!--                app:boxStrokeColor="@color/black"-->
<!--                app:boxStrokeWidthFocused="2dp"-->
<!--                app:endIconMode="clear_text"-->
<!--                app:hintTextColor="@color/black"-->
<!--                app:startIconTint="@color/black">-->

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/textViewBillInfo"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
<!--                    android:inputType="text" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <TextView
                android:layout_marginVertical="2dp"
                android:id="@+id/textViewBillInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/extracted_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:id="@+id/select_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image" />

        <Button
            android:id="@+id/checkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extract text" />

        <Button
            android:id="@+id/checkGst"
            android:onClick="validateGST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check GSTIN" />

    </LinearLayout>

</RelativeLayout>